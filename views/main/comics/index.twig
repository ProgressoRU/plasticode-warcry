{% extends 'main/layout.twig' %}

{% import 'main/macros.twig' as m %}
{% import 'main/local_macros.twig' as lm %}

{% block content %}
	<div class="panel panel-primary">
		{{ lm.panel_header(_context) }}
	  	<div class="panel-body body-nopad">
			<ul class="nav nav-tabs" role="tablist">
		  		{% if series %}
		  			{{ m.tab('series', 'Серии', true) }}
				{% endif %}
		  		{% if standalones %}
		  			{{ m.tab('standalones', 'Одиночные') }}
				{% endif %}
			</ul>

			<div class="tab-content">
				{% if series %}
					<div role="tabpanel" class="tab-pane fade in active" id="series">
	                    {% include 'components/comics.twig' with { 'comics': series } only %}
					</div>
				{% endif %}
				{% if standalones %}
					<div role="tabpanel" class="tab-pane fade" id="standalones">
	                    {% include 'components/comics.twig' with { 'comics': standalones } only %}
		    		</div>
		    	{% endif %}
		    </div>
		</div>
	</div>
{% endblock %}
