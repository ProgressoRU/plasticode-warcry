{% extends 'main/layout.twig' %}

{% import 'main/macros.twig' as m %}
{% import 'main/local_macros.twig' as lm %}

{% block content %}
	<div class="panel panel-primary">
		{{ lm.panel_header(_context) }}
		{% if parts|length > 0 %}
			<div class="panel-body body-nopad">
				<ul class="nav nav-tabs" role="tablist">
			  		{% for part in parts %}
			  			{{ m.tab(part.id, part.label, loop.first) }}
					{% endfor %}
				</ul>
	
				<div class="tab-content">
					{% for part in parts %}
						<div role="tabpanel" class="tab-pane fade{% if loop.first %} in active{% endif %}{% if not part.component %} linkblock-big{% endif %}" id="{{ part.id }}">
							{% if part.component == 'gallery_pictures' %}
			                    {% include 'components/gallery.twig' with { 'pictures': part.values } only %}
							{% elseif part.component == 'streams' %}
			                    {% include 'components/streams.twig' with { 'streams': part.values } only %}
							{% elseif part.component == 'comics' %}
			                    {% include 'components/comics.twig' with { 'comics': part.values } only %}
							{% else %}
								{% for v in part.values %}
									<div class="icon-{{ v.game.alias }}">
										<div>
											<a title="[{{ v.game.name }}] {{ v.title|raw }}" href="{{ v.url }}">{{ v.title|raw }}</a>
										</div>
										<div>
											{{ v.subtitle|raw }}
										</div>
									</div>
								{% endfor %}
							{% endif %}
						</div>
					{% endfor %}
				</div>
			</div>
		{% else %}
			<div class="panel-body">
				По тегу <b>&laquo;{{ tag }}&raquo;</b> ничего не найдено.
			</div>
		{% endif %}
	</div>
{% endblock %}
