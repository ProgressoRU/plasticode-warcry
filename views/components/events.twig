{% import 'macros.twig' as gm %}

{% for event in events %}
	<div class="icon-{{ event.game.alias }}">
		<div>
			<a{% if event.important %} class="important"{% endif %} title="[{{ event.game.name }}] {{ event.name|raw }}" href="{{ path_for('main.event', { 'id': event.id }) }}">{{ event.name }}</a>
		</div>
		<div ng-cloak>
			{{ event.type.name }}, {{ gm.moment_diff(event.starts_at_iso, event.ends_at_iso, event.unknown_end) }}
		</div>
	</div>
{% endfor %}
